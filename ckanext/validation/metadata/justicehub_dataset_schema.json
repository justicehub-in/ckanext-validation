
{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "verified",
      "label": "Verified",
      "preset":"select",
      "form_snippet": "radio.html",
      "choices":[
	      {
             "value": "true",
             "label": "Yes"
	      },
	      {
             "value": "false",
             "label": "No"
	      }
      ],
      "description": "Indicates if the dataset has finished moderator verification."
    },
    {
      "field_name": "state",
      "label": "State",
      "preset":"select",
      "form_snippet": "radio.html",
      "choices":[
	      {
             "value": "active",
             "label": "Active"
	      },
	      {
             "value": "draft",
             "label": "Draft"
	      }
      ],
      "description": "State of the dataset: Active or Draft."
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "update_frequency",
      "label": "Updated",
      "preset":"select",
      "form_snippet": "radio.html",
      "choices":[
	      {
             "value": "not_updated",
             "label": "Not updated"
	      },
          {
             "value": "daily",
             "label": "Daily"
	      },
	      {
             "value": "monthly",
             "label": "Monthly"
	      },
	      {
             "value": "annually",
             "label": "Annually"
	      }
      ],
      "description": "Indicates if or how frequently the dataset is updated."
    },
    {
      "field_name": "states",
      "label": "State",
      "form_placeholder": "e.g. Andhra Pradesh, Chhattisgarh etc",
      "preset": "metadata_autocomplete",
      "form_attrs": {
          "data-module-source": "/api/3/action/metadata_autocomplete?field=states&incomplete=?"
      },
      "description": "Which Indian state(s) the dataset has data from."
    },
    {
      "field_name": "district",
      "label": "District",
      "form_placeholder": "e.g. Guntur, Raipur etc",
      "preset": "metadata_autocomplete",
      "form_attrs": {
          "data-module-source": "/api/3/action/metadata_autocomplete?field=district&incomplete=?"
      },
      "description": "Which Indian district(s) the dataset has data from."
    },
    {
      "field_name": "village",
      "label": "Village",
      "form_placeholder": "",
      "preset": "metadata_autocomplete",
      "form_attrs": {
          "data-module-source": "/api/3/action/metadata_autocomplete?field=village&incomplete=?"
      },
      "description": "Which Indian village(s) the dataset has data from."
    },
    {
      "field_name": "court",
      "label": "Court Hierarchy",
      "preset":"multiple_checkbox",
      "choices": [
	      {
	          "value": "all",
	          "label": "All"
	      },
	      {
	          "value": "supreme_court",
	          "label": "Supreme Court"
	      },
	      {
              "value": "high_court",
              "label": "High Court"
	      },
	      {
              "value": "district_court",
              "label": "District Court"
	      },
	      {
              "value": "tribunal",
              "label": "Tribunal"
	      }
       ],
      "description": "From which level of court the data is studied."
    },
    {
      "field_name": "start_year",
      "label": "Data spans from (year)",
      "form_placeholder": "e.g. 2010",
      "preset": "year",
      "description": "From which year the data is collected."
    },
    {
      "field_name": "end_year",
      "label": "Data spans till (year)",
      "form_placeholder": "e.g. 2020",
      "preset": "year",
      "description": "Till which year the data is collected."
    },
    {
      "field_name": "collected_month",
      "label": "Data Collected",
      "form_placeholder": "e.g. 2020-03",
      "preset": "month",
      "description": "When the data was collected."
    },
    {
      "field_name": "level",
      "label": "Level of Dataset",
      "form_placeholder": "e.g. Individual, State",
      "preset": "metadata_autocomplete",
      "form_attrs": {
          "data-module-tags": true,
          "data-module-source": "/api/3/action/metadata_autocomplete?field=level&incomplete=?"
      },
      "description": "On which level the study was done e.g. Individual, State etc."
    },
    {
      "field_name": "language",
      "label": "Language",
      "form_placeholder": "e.g. en, hi",
      "preset": "metadata_autocomplete",
      "form_attrs": {
          "data-module-source": "/api/3/action/metadata_autocomplete?field=language&incomplete=?"
      }
    },
    {
      "field_name":"upload_date",
      "label": "Upload date",
      "preset":"date"
    },
    {
      "field_name": "last_updated",
      "label": "Last updated",
      "preset": "date"
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "data_source",
      "label": "Data Source",
      "preset":"multiple_checkbox_with_other",
      "form_attrs": {
          "data-module-source": "/api/3/action/metadata_autocomplete?field=data_source&incomplete=?"
      },
      "choices": [
	      {
	          "value": "gov_web",
	          "label": "Government Website"
	      },
	      {
	          "value": "gov_pub",
	          "label": "Government Publication"
	      },
	      {
              "value": "other_web",
              "label": "Other Website"
	      },
	      {
              "value": "other_pub",
              "label": "Other Publication"
	      },
          {
              "value": "media_pub",
              "label": "Media Publication"
	      },
          {
              "value": "rti",
              "label": "RTI"
	      },
          {
              "value": "ecourts",
              "label": "eCourts"
	      },
          {
              "value": "ncrb",
              "label": "NCRB"
	      }
       ],
      "description": "What is the source of data."
    },
    {
      "field_name":"method_of_collection",
      "label": "Method of Collection",
      "preset":"multiple_checkbox_with_other",
      "form_attrs": {
          "data-module-source": "/api/3/action/metadata_autocomplete?field=method_of_collection&incomplete=?"
      },
      "choices": [
	      {
              "value": "primary",
              "label": "Data collected"
	      },
	      {
	          "value": "scraping",
	          "label": "Web Scraping"
	      },
	      {
	          "value": "survey",
	          "label": "Survey"
	      },
          {
	          "value": "gov_sourced",
	          "label": "Sourced from Government Agencies"
	      }
       ],
      "description": "How the data was collected."
    },
    {
      "field_name": "sensitivity",
      "label": "How sensitive is the data",
      "preset":"select",
      "form_snippet": "radio.html",
      "choices":[
	      {
             "value": "low",
             "label": "Low sensitive"
	      },
	      {
             "value": "medium",
             "label": "Medium sensitive"
	      },
	      {
             "value": "high",
             "label": "Highly sensitive"
	      }
      ],
      "description": "Sensitivity of the information that is being presented in the dataset."
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0"
    },
    {
      "field_name": "author",
      "label": "Author",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:creator"
    },
    {
      "field_name": "author_email",
      "label": "Author Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:creator",
      "display_snippet": "email.html",
      "display_email_name_field": "author"
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    },
    {
      "field_name": "assumptions",
      "label": "Assumptions",
      "form_snippet": "markdown.html"
    },
    {
      "field_name": "links",
      "label": "External Links",
      "preset": "composite_repeating",
      "form_blanks": 3,
      "subfields": [
          {
              "field_name": "link",
              "label": "Link"
          },
          {
              "field_name": "title",
              "label": "Title"
          },
          {
              "field_name": "description",
              "label": "Description"
          }
      ],
      "description": "Any relevant links e.g. research publication, code etc."
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    },
    {
      "field_name": "schema",
      "label": "Schema",
      "preset": "resource_schema"
    },
    {
      "field_name": "validation_options",
      "label": "Validation options",
      "preset": "validation_options"
    },
    {
      "field_name": "validation_status",
      "label": "Validation status",
      "preset": "hidden_in_form"
    },
    {
      "field_name": "validation_timestamp",
      "label": "Validation timestamp",
      "preset": "hidden_in_form"
    },
    {
      "field_name": "variable_measured",
      "label": "Variable Measured",
      "preset": "metadata_autocomplete",
      "form_placeholder": "eg. case metadata, prison details",
      "form_attrs": {
          "data-module-source": "/api/3/action/resource_metadata_autocomplete?field=variable_measured&incomplete=?"
      },
      "description": "What information does this file capture."
    }
  ]
}
